# Docker Environment Configuration for AList Storage Monitor
# Copy this file to .env and update the values for your environment

# Database Configuration
DATABASE_URL=postgresql://postgres:password@db:5432/alist_monitor
PGHOST=db
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=alist_monitor

# Application Configuration
NODE_ENV=production
PORT=5000

# AList Configuration (Update these with your actual values)
ALIST_URL=http://bilii.fun:5244
ALIST_TOKEN=your_alist_token_here

# WeChat Webhook Configuration (Update with your actual webhook URL)
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_key_here

# Monitoring Configuration
MONITOR_INTERVAL=10